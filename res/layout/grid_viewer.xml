<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:id ="@+id/homeLayout"
  android:layout_width="fill_parent"
  android:background="@drawable/bg_white"
  android:gravity="center_horizontal" 
  android:layout_height="fill_parent">
    
    <LinearLayout android:layout_width="fill_parent" 
			    android:id="@+id/gridViewLayout"
			    android:layout_weight="0.8"
			    android:background="@drawable/bg_white" 
			    android:orientation="vertical" 
			    android:layout_height="fill_parent" >
			    
		<GridView android:layout_height="fill_parent" 
		    android:id="@+id/gridView" 
		    android:layout_gravity="center_horizontal"
		    android:layout_width="fill_parent"
		    android:numColumns="auto_fit"
		    android:verticalSpacing="15dp"
		    android:stretchMode="columnWidth" >
		    </GridView>
	</LinearLayout>
    
    
    <LinearLayout android:layout_width="fill_parent" 
			    android:id="@+id/bottomLayout"
			    android:layout_weight="1.2"
			    android:background="@drawable/bg_white" 
			    android:orientation="vertical" 
			    android:layout_height="fill_parent" >
		    	
		        <TextView android:id="@+id/suggestionTextView" 
			        android:layout_width="fill_parent" 
			        android:text="Suggest a feature"
			        android:gravity="center"
			        android:layout_marginBottom="3dp"
			        android:background="@drawable/bg_blue"
			        android:layout_weight="0.3"
			        android:layout_height="fill_parent">
			    </TextView>
		    
		        <TextView android:id="@+id/aboutTextView" 
			        android:layout_width="fill_parent" 
			        android:text="About this app" 
			        android:gravity="center"
			        android:layout_marginBottom="3dp"
			        android:layout_weight="0.3"
			        android:background="@drawable/bg_blue" 
		      		android:layout_height="fill_parent">
		        </TextView>
		        
		        <TextView android:id="@+id/feedbackTextView" 
			        android:layout_width="fill_parent"
			        android:gravity="center"
			        android:layout_marginBottom="3dp"
			        android:layout_weight="0.3"
			        android:text="Provide feedback" 
			        android:background="@drawable/bg_blue" 
			        android:layout_height="fill_parent">
		        </TextView>
	    	</LinearLayout>
</LinearLayout>
