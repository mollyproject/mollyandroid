<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:id="@+id/generalResultsLayout"
  android:layout_width="fill_parent"
  android:background="@drawable/bg_white"
  android:layout_height="wrap_content">
    <ScrollView android:layout_height="wrap_content" 
     android:id="@+id/generalResultsScroll" 
     android:layout_width="fill_parent">
        <LinearLayout android:id="@+id/generalResultsList" 
        android:layout_width="fill_parent" 
        android:orientation="vertical"
        android:layout_height="wrap_content">
            <TextView android:textSize="18dp"
	            android:layout_width="wrap_content" 
	            android:id="@+id/searchResultsHeader" 
	            android:text="Results" 
	            android:textColor="@color/black" 
	            android:layout_gravity="center_vertical" 
	            android:textStyle="bold" 
	            android:layout_height="wrap_content"
	            android:paddingLeft="10dp" 
	            android:layout_marginTop="10dp" 
	            android:layout_marginBottom="10dp">
            </TextView>
        </LinearLayout>
    </ScrollView>
    
    <LinearLayout android:layout_height="wrap_content" 
	    android:id="@+id/specificSuggestions" 
	    android:layout_width="fill_parent" 
	    android:orientation="vertical">
    </LinearLayout>
    
</LinearLayout>
