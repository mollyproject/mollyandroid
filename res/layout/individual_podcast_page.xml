<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:id="@+id/indPodcastLayout"
  android:layout_height="fill_parent">
    <ScrollView android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:id="@+id/indPodcastScroll">
        <LinearLayout android:id="@+id/indPodcastScrollLayout" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:orientation="vertical">
        
	        <LinearLayout android:layout_width="fill_parent" 
		        android:layout_height="wrap_content" 
		        android:id="@+id/indPodcastDescriptionLayout">
		        <ImageView android:layout_width="wrap_content" 
			        android:layout_height="wrap_content" 
			        android:id="@+id/indPodcastIcon" 
			        android:src="@drawable/android_button">
		        </ImageView>
		        <TextView android:text="TextView" 
			        android:id="@+id/indPodcastDescription" 
			        android:layout_width="wrap_content" 
			        android:layout_height="wrap_content">
		        </TextView>
    		</LinearLayout>
    		<LinearLayout android:layout_width="fill_parent" 
	    		android:layout_height="wrap_content" 
	    		android:id="@+id/indPodcastList" 
	    		android:orientation="vertical">
    		</LinearLayout>		
        </LinearLayout>
    </ScrollView>
</LinearLayout>
