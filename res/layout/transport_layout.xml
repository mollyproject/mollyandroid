<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:background="@drawable/bg_blue"
  android:layout_height="wrap_content">
  	<LinearLayout android:id="@+id/transportLayout" 
         android:layout_width="fill_parent"
         android:orientation="vertical" 
         android:layout_height="wrap_content">
         
	    <TextView android:textColor="@color/blue"
	    	android:text="This page might take a moment or two to load..."
		    android:layout_height="wrap_content" 
		    android:id="@+id/transportTitle" 
		    android:background="@drawable/bg_white"
		    android:textSize="18dp"
		    android:textStyle="bold" 
		    android:layout_width="fill_parent" 
		    android:padding="10dp">
	    </TextView>
	    
	    <TextView android:textColor="@color/blue"
		    android:layout_height="wrap_content" 
		    android:id="@+id/transportAnnouncements" 
		    android:background="@drawable/bg_white"
		    android:textSize="16dp"
		    android:layout_width="fill_parent" 
		    android:paddingLeft="10dp"
		    android:paddingRight="10dp">
	    </TextView>
	    
	    <ScrollView android:layout_height="wrap_content" 
	     android:id="@+id/stopsScroll" 
	     android:layout_width="fill_parent">
	     
	        <LinearLayout android:id="@+id/transportDetailsLayout" 
	         android:layout_width="fill_parent"
	         android:orientation="vertical" 
	         android:layout_height="wrap_content">
	        </LinearLayout>
	        
	    </ScrollView>
    </LinearLayout>
</LinearLayout>
