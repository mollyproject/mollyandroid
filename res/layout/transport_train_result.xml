<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:background="@drawable/bg_white"
  android:id="@+id/trainResultLayout"
  android:paddingTop="15dp"
  android:paddingBottom="15dp"
  android:orientation="horizontal" android:baselineAligned="true">
   
    
    <TextView android:text="Destination" 
	    android:id="@+id/trainDestination" 
	    android:layout_width="fill_parent"
	    android:layout_weight="1.1"  
	    android:gravity="center"
	    android:layout_gravity="center_vertical"
	    android:textSize="16dp"
	    android:textColor="@color/blue"
	    android:layout_height="wrap_content" 
	    android:paddingLeft="5dp">
    </TextView>
    
     <TextView android:textSize="16dp" 
	    android:id="@+id/platformNumber" 
	    android:textColor="@color/blue"
	    android:gravity="center" 
	    android:paddingLeft="5dp" 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:layout_gravity="center_vertical" 
	    android:layout_weight="1.6" 
	    android:text="Plat.">
    </TextView>
    
    <TextView android:text="Scheduled" 
	    android:id="@+id/trainScheduledTime" 
	    android:layout_width="fill_parent"
	    android:layout_weight="1.4" 
	    android:paddingLeft="5dp"
	    android:textSize="16dp"
	    android:gravity="center"
	    android:layout_gravity="center_vertical"
	    android:textColor="@color/blue"
	    android:layout_height="wrap_content">
    </TextView>
    
    <TextView android:text="Expected" 
	    android:id="@+id/trainExpectedTime" 
	    android:layout_width="fill_parent"
	    android:layout_weight="1.3" 
	    android:textSize="16dp"
	    android:paddingRight="5dp"
	    android:gravity="center"
	    android:layout_gravity="center_vertical"
	    android:textColor="@color/blue"
	    android:layout_height="wrap_content">
    </TextView>
    
</LinearLayout>
